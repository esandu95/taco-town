<!DOCTYPE html>
<html>

<head>
  <title>Taco Recipes</title>
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
  <h1>Taco Town 🌮</h1>

  <form action="/recipe" method="POST" class="buttons">
    <button type="submit" value="chicken" name="cChoice">🍗</button>
    <button type="submit" value="beef" name="bChoice">🥩</button>
    <button type="submit" value="fish" name="fChoice">🐟</button>
  </form>
  <div id="recipeContainer" class="hidden">

    <% if (locals.name){ %>
      <h2><%= name %></h2>
      <h3>Ingredients:</h3>
      <ul id="ingredientsList">
        <li><%= proteinName %>, <%= proteinPreparation %></li>
        <li><%= salsaName %></li>
        <% for (i = 0; i < oToppings.length; i++) {
          var toppingName= oToppings[i].name;
          var toppingQuantity= oToppings[i].quantity;

          %><li><%= toppingQuantity %> of <%= toppingName %></li><%
          
        } %>
      </ul>
      <% }else{ %>
    <h2>Pick your favourite taco ingredient 👆</h2>
    <% } %>
    <!-- Else, show the recipe name e.g. <h2>Recipe name</h2>-->





  </div>
</body>

</html>